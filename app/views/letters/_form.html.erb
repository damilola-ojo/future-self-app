<%= form_with model: @letter do |letter_form| %>

  <div class="mb-3">
    <%= letter_form.label :title %>
    <%= letter_form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= letter_form.label :content %>
    <%= letter_form.text_field :content, class: "form-control" %>
  </div>

  <div class="mb-3">
     <%= letter_form.label :delivery_date %>
     <%= letter_form.date_select :delivery_date, selected: Date.today + 7, end_year: 2032, class: "select" %>
  </div>

  <div class="mb-3">
    <%= letter_form.label :delivery_email %>
    <%= letter_form.text_field :delivery_email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= letter_form.submit "Send", class: "btn btn-primary" %>
  </div>
<% end %>

