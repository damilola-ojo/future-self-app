<%= simple_form_for @letter do |letter_form| %>
  <%= letter_form.input :title %>
  <%= letter_form.input :content %>
  <%= letter_form.input :delivery_date, as: :date, 
                                  start_year: Date.today.year, 
                                  end_year: Date.today.year + 12 %>
  <%= letter_form.input :delivery_email %>
  <%= letter_form.input :public, label: "Make Letter public?" %>
  <%= letter_form.submit class: "btn btn-primary" %>
<% end %>
